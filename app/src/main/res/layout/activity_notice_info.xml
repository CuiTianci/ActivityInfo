<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/notice_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面向"/>
                <TextView
                    android:id="@+id/notice_all_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全年级，"/>
                <TextView
                    android:id="@+id/notice_all_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有专业"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"/>
            </LinearLayout>
            <TextView
                android:id="@+id/notice_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="标题"
                android:layout_marginTop="20dp"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/notice_info_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/notice_info_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="250dp"
                android:text="发布单位"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/notice_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="250dp"
                android:text="发布时间"/>

            <!--评论区-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="4dp">
                <com.cuitianci.app.activityinfo.Adapter.NestedListView
                    android:id="@+id/notice_info_comment_listView"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">
                </com.cuitianci.app.activityinfo.Adapter.NestedListView>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
